{% extends 'base.html.twig' %}

{% block body %}

    <table>
        <thead>
            <tr>
                <th> Nom de l'article </th>
                <th> Action </th>
            </tr>
        </thead>
        <tbody>
            {% for slug, article in articles %}
                <tr>
                    <td>{{ article.title }}</td>
                <td><a href="{{ path('articles', { slug: slug}) }}"> Voir l'article</a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

{% endblock body %}